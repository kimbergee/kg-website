<section class="hero">
  <div class="container">
    <div class="text-content">
      <h1>{{ site.hero.heading }}<span class="outline">{{site.hero.name}}</span></h1>
      <h3>I'm a <span class="outline">front-end developer</span> with a <span class="outline">UI</span> focus, currently living in the Boston area.</h3>
      {{ content | safe }}
    </div>
    <div class="avatar">
      <img src="{{site.avatar}}" alt="avatar illustration" />
    </div>
  </div>
</section>